<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_UI.Kata_j.KataJ"
             Title="EjerJ UI">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblError"/>
            <Entry x:Name="username" Placeholder="Usuario" />
            <Entry x:Name="password" IsPassword="true" Placeholder="Password"/>
            <Button Text="Login" Clicked="btnLogin"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>