<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_Logic.Kata_LF.KataLF">
    <ContentPage.Content>
        
        <Grid x:Name="Control">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Text="{Binding Text.points}" Grid.Column="0"/>
            <Label Text="{Binding Text.name}" Grid.Column="1"/>
            <Label Text="{Binding Text.age}" Grid.Column="2"/>
            <Label Text="{Binding Text.sport}" Grid.Column="3"/>

        </Grid>

    </ContentPage.Content>
</ContentPage>